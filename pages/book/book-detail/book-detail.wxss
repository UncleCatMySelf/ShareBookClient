/* pages/book/book-detail/book-detail.wxss */
@import '../heart/heart-template.wxss';

.head{
  width: 100%;
  height: 608rpx;
}
  
.images{
  align-content: center;
  margin-top: 33rpx;
  margin-bottom: 33rpx;
  margin-left: 175rpx;
  height: 542rpx; 
  width: 388rpx;
  box-shadow: #ADADAD 5rpx 5rpx 5rpx 5rpx;
}

.tabs-box{
  height: 90rpx; 
  display: flex;
  justify-content: space-between;
}

.tabs-item{
  width: 50%;
  color: #000;
  font-size: 30rpx;
  align-items: center;
  justify-content: center;
  display: flex;
  border-top: 1rpx solid #D0D0D7;
  border-bottom: 1rpx solid #D0D0D7;
}

.tabs-item.selected{
  /*color: #AB956D;*/
  color: #fff;
  /*border-bottom: 2px solid #AB956D;*/
  background: #FF4A26;
  border-top: 1rpx solid rgba(171,149,109,.8);
  border-bottom: 1rpx solid rgba(171,149,109,.8);
}

.product-detail-imgs{
  width: 100%;
  height: 100%;
  background: #EBEAEA;
}

.product-detail-properties{
  width: 100%;
  height: 100%;
  background: #EBEAEA;
  border: 1rpx solid #EBEAEA;
}

.properties-item{
  display: flex;
  margin: 25rpx 0;
  font-size:24rpx;
}

.properties-name{
  width: 160rpx;
  color:#808080;
  text-align: center;
}

.properties-detail{
  flex:1;
  color: #333;
  padding-right: 40rpx;
}

.product-detail-protect view{
  font-size: 24rpx;
  color:808080;
  text-align: center;
  margin-top: 30rpx;
}

.button{
  width: 328rpx;
  height: 80rpx;
}

.but-img{ 
  position: fixed;
  left: 25%;
  bottom: 5%;
}

.imgs-head{
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #fff;
}

.imgs-message{
  display: flex;
  flex-direction: column;
  margin: auto auto;
  width: 702rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-top: 24rpx;
}

.comments{
  display: flex;
  flex-direction: column;
  margin: auto auto;
  width: 702rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}

.heart-to{
  display: flex;
  flex-direction: row; 
}

.heart-to-comments{
  display: flex;
  flex-direction: row; 
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.imgs-head-heart{
  display: flex;
  flex-direction: row; 
  margin-bottom: 12rpx;
}

.title{
  font-size: 36rpx;
  margin-left: 40rpx;
  margin-top: 24rpx;
  font-weight: 700;
}

.info{
  font-size: 26rpx;
  margin-left: 40rpx;
  margin-top: 12rpx;
  margin-right: 30rpx;
}

.price{
  font-size: 32rpx;
  margin-left: 40rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.zhishu{
  font-size: 26rpx;
  margin-left: 40rpx;
}

.zhishu-comments{
  font-size: 28rpx;
  margin-left: 30rpx;
  font-weight: 700;
}

.num{
  font-size: 26rpx;
  margin-left: 40rpx;
}

.num-value{
  color: #FF4A26;
}

.message{
  font-size: 26rpx;
  margin-left: 30rpx;
}

.comments-message{
  font-size: 26rpx;
  margin-left: 30rpx;
  line-height: 40rpx;
}

.comments-message-user{
  font-size: 26rpx;
  margin-left: 30rpx;
  line-height: 40rpx;
  font-weight: 600;
}

.comments-message-date{
  font-size: 26rpx;
  margin-left: 180rpx;
  line-height: 40rpx;
  font-weight: 600;
}

.message-summary{
  font-size: 26rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.message-title{
  font-size: 30rpx;
  font-weight: 600;
  margin-left: 30rpx;
  margin-top: 10rpx;
} 

.message-view{
  margin-top: 10rpx;
}

.message-view-last{
  display: flex;
  flex-direction: row; 
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.book-summary{
  display: flex;
  flex-direction: column;
  margin: auto;
  width: 702rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-top: 30rpx;
}

.comment-user{
  margin-top: 5rpx;
  margin-bottom: 10rpx;
}